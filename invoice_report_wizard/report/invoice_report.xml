            <!-- Define the QWeb report template for the Invoice PDF Report -->
    <data>
        <report id="invoice_report_wizard_report"
                model="invoice.report.wizard"
                string="Customer Report Wizard"
                report_type="qweb-pdf"
                name="invoice_report_wizard.report_invoice_template"
                file="invoice_report_wizard.report_invoice_template"
                attachment_use="True"
                attachment="(object.name or '')+' '+ time.strftime('%d,%b %Y %I:%M %p')"
        />



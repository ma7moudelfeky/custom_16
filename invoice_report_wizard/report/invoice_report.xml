        <template id="report_invoice_template">

            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="doc.move_lines" t-as="line">
                                <!-- Customize your report template here using the move_lines data -->
                                <div>
                                    <span t-esc="line.move_id.name"/><br/>
                                    <span t-esc="line.due_date"/><br/>
                                    <span t-esc="line.amount_currency"/><br/>
                                    <span t-esc="line.partner_id.name"/>
                                </div>
                            </t>
                </t>
            </t>
        </template>

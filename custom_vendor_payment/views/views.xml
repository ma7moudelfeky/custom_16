<odoo>
    <data>

        <record id="send_activity_notification" model="ir.cron">
            <field name="name">Payment Due Date</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="state">code</field>
            <field name="code">model._action_payment_activity()</field>
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name="numbercall">-1</field>
        </record>

        <record id="res_config_settings_view_form_inherited" model="ir.ui.view">
            <field name="name">res_config_settings_view_form_inherited</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('content-group')]//div[6]" position="after">
                    <div style="margin-top:20px;margin-bottom:20px;">
                        <span><strong>Vendor And Customer Payments</strong></span>
                    </div>
                    <div>
                        <label for="send_notification_before" class="col-lg-4 o_light_label"/>
                        <field name="send_notification_before" string="Send Notification Before" class="oe_inline"/>
                        <span>Days</span>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="account_journal_form_inherited" model="ir.ui.view">
            <field name="name">account_journal_form_inherited</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="is_checked"/>
                </xpath>
            </field>
        </record>

        <record id="account_payment_form_inherited" model="ir.ui.view">
            <field name="name">account_payment_form_inherited</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='payment_method_line_id']" position="after">
                    <field name="journal_checked" invisible="1"/>
                    <field name="check_no" attrs="{'invisible': [('journal_checked', '=', False)]}"/>
                    <field name="check_due_date" attrs="{'invisible': [('journal_checked', '=', False)]}"/>
                    <field name="bank_id" attrs="{'invisible': [('journal_checked', '=', False)]}"/>
                    <field name="is_true" attrs="{'invisible': [('journal_checked', '=', False)]}"/>
                </xpath>

                <xpath expr="//sheet/group/group[@name='group2']/field[@name='payment_method_line_id']"
                       position="replace">
                    <field name="payment_method_line_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                </xpath>
            </field>
        </record>

        <record id="account_payment_tree_view_inherited" model="ir.ui.view">
            <field name="name">account_payment_tree_view_inherited</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="check_no" optional="show"/>
                    <field name="check_due_date" optional="show"/>
                    <field name="bank_id" optional="show"/>
                    <field name="is_true" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="account_payment_search_view_inherited" model="ir.ui.view">
            <field name="name">account_payment_search_view_inherited</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="check_no" string="Check Number" filter_domain="[('check_no', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
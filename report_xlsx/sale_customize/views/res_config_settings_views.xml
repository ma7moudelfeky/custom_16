<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_l10n_ec_edi" model="ir.ui.view">
            <field name="name">res.config.settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']" position="after">
                    <div id="whole_discount" >
                        <h2>Whole Discount Products</h2>
                    </div>
                    <div  class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">First Whole Discount
                                    Product</span>
                                <div class="content-group">
                                    <div class="row">
                                        <label for="first_whole_discount_product_id"
                                            class="col-lg-4 o_light_label"/>
                                        <field name="first_whole_discount_product_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box"
                            title="Electronic Certificate File">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">

                                <span class="o_form_label">Second Whole Discount
                                    Product</span>
                                <div class="content-group">
                                    <div class="row">
                                        <label for="second_whole_discount_product_id"
                                               class="col-lg-4 o_light_label"/>
                                        <field name="second_whole_discount_product_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

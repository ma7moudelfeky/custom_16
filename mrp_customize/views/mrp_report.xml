<data>
    <template id="report_mrporder" inherit_id="mrp.report_mrporder">
        <xpath expr="/t[1]/t[1]/t[1]/t[1]/div[1]/div[4]/div[4]" position="after">
            <div class="col-3">
                <strong>Lot / Serial Number:</strong><br/>
                <span t-field="o.lot_producing_id"/>
            </div>
        </xpath>
        <xpath expr="/t[1]/t[1]/t[1]/t[1]/div[1]/div[3]/div[2]" position="after">

            <div class="col-3">
                <strong>Tank:</strong><br/>
                <span t-field="o.tank_id"/>
            </div>

            <div class="col-3">
                <strong>Weight:</strong><br/>
                <span t-field="o.tank_weight"/>
            </div>

            <div class="col-3">
                <strong>Unit Volume:</strong><br/>
                <span t-field="o.unit_volume"/>
            </div>
        </xpath>
    </template>
</data>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Views -->
        <!-- Form View -->
        <record id="hr_incentive_type_form_view" model="ir.ui.view">
            <field name="name">Incentive</field>
            <field name="model">hr.incentive.type</field>
            <field name="arch" type="xml">
                <form string="Incentive Type">
                    <sheet>
                        <group class="oe_title">
                            <field name="name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="hr_incentive_type_tree_view" model="ir.ui.view">
            <field name="name">Incentive</field>
            <field name="model">hr.incentive.type</field>
            <field name="arch" type="xml">
                <tree string="Incentive Type" editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Actions -->
        <!-- incentive -->
        <record id="hr_incentive_type_action" model="ir.actions.act_window">
            <field name="name">Incentive Type</field>
            <field name="res_model">hr.incentive.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Add new Incentive Type.
                </p>
            </field>
        </record>

        <!-- MenuItems -->
        <menuitem id="incentive_type" name="Incentive Type"
                  parent="incentive_custom_main"
                  action="hr_incentive_type_action"
                  groups="hr_incentive_custom.group_incentive_manager"
                  sequence="2"/>
    </data>
</odoo>

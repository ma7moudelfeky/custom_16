<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="seq_incentive_req" model="ir.sequence">
            <field name="name">Incentive Sequencer</field>
            <field name="code">hr.incentive.custom</field>
            <field name="prefix">INC-</field>
            <field name="number_increment">1</field>
			<field name="number_next_actual">1</field>
            <field name="padding">5</field>
        </record>
    </data>
    <data>
        <!-- Views -->
        <!-- Form View -->
        <record id="hr_incentive_custom_form_view" model="ir.ui.view">
            <field name="name">Incentive</field>
            <field name="model">hr.incentive.custom</field>
            <field name="arch" type="xml">
                <form string="Incentive">
                    <header>
                        <button name="submit" type="object" string="Submit" states="draft" class="oe_highlight" groups="hr_incentive_custom.group_incentive_officer"/>
                        <button name="approve" type="object" string="Approve" states="submit" class="oe_highlight" groups="hr_incentive_custom.group_incentive_manager"/>
                        <button name="cancel" type="object" string="Cancel" states="draft,submit,approve" groups="hr_incentive_custom.group_incentive_manager" class="btn-danger"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve,cancel" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="0"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name='employee_id'
                                       options="{'no_create':True, 'no_create_edit' :True, 'no_open':True}" 
                                       attrs="{'readonly':[('state','in',('submit','approve','cancel'))]}"/>
                                <field name='department_id'/>
                                <field name='job_id'/>
                            </group>
                            <group>
                                <field name="incentive_type" options="{'no_create':True, 'no_create_edit' :True, 'no_open':True}" required="1"
                                    attrs="{'readonly':[('state','in',('approve','cancel'))]}"/>
                                <field name="incentive_amount" force_save="1" required="1"
                                    attrs="{'readonly':[('state','in',('approve','cancel'))]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="date" required="1" attrs="{'readonly':[('state','in',('approve','cancel'))]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Note">
                                <field name="note" attrs="{'readonly':[('state','in',('approve','cancel'))]}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="hr_incentive_custom_tree_view" model="ir.ui.view">
            <field name="name">Incentive</field>
            <field name="model">hr.incentive.custom</field>
            <field name="arch" type="xml">
                <tree string="Incentive" default_order="date desc">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="incentive_type"/>
                    <field name="incentive_amount"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="hr_incentive_search_view" model="ir.ui.view">
            <field name="name">hr.incentive.custom.search</field>
            <field name="model">hr.incentive.custom</field>
            <field name="arch" type="xml">
                <search string="Incentive">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="incentive_type"/>
                    <field name="incentive_amount"/>
                    <separator/>
                    <filter domain="[('state', '=', 'draft')]" string="Draft" name="draft"/>
                    <filter domain="[('state', '=', 'submit')]" string="Submit" name="submit"/>
                    <filter domain="[('state','=',('approve'))]" string="Approved" name="approve"/>
                    <filter domain="[('state', '=', 'cancel')]" string="Cancel" name="cancel"/>
                    <filter string="Date" name="date_filter" date="date"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="state" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Employee" name="employee_id" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter string="Incentive Type" name="incentive_type" domain="[]" context="{'group_by':'incentive_type'}"/>
                        <filter string="Date" name="date" domain="[]" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Actions -->
        <!-- incentive -->
        <record id="hr_incentive_custom_action" model="ir.actions.act_window">
            <field name="name">Incentive</field>
            <field name="res_model">hr.incentive.custom</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new Incentive.
                </p>
            </field>
        </record>

        <!-- MenuItems -->
        <menuitem id="incentive_custom_main" name="Incentive"
                  groups="hr_incentive_custom.group_incentive_officer"/>
        <menuitem id="incentive" name="Incentive"
                  parent="incentive_custom_main"
                  action="hr_incentive_custom_action"
                  groups="hr_incentive_custom.group_incentive_officer"
                  sequence="1"/>
    </data>
</odoo>

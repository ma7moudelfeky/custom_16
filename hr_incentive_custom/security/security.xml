<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_incentive" model="ir.module.category">
        <field name="name">Incentive</field>
        <field name="description">Incentive Group</field>
    </record>
    <record id="group_incentive_officer" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="module_category_incentive"/>
    </record>
    <record id="group_incentive_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_incentive"/>
        <field name="implied_ids" eval="[(4, ref('group_incentive_officer'))]"/>
    </record>
</odoo>
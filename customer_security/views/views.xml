<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_partner_form_001" model="ir.ui.view">
            <field name="name">view_partner_form_001</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="allowed_user_ids" widget="many2many_tags" required="1"/>
                </xpath>

            </field>
        </record>

        <record id="view_move_form_001" model="ir.ui.view">
            <field name="name">view_move_form_001</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="allowed_user_ids" widget="many2many_tags" invisible="1"/>
                </xpath>

            </field>
        </record>

        <record id="view_account_payment_form_001" model="ir.ui.view">
            <field name="name">view_account_payment_form_001</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="allowed_user_ids" widget="many2many_tags" invisible="1"/>
                </xpath>

            </field>
        </record>

        <record id="view_order_form_001" model="ir.ui.view">
            <field name="name">view_order_form_001</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="allowed_user_ids" widget="many2many_tags" invisible="1"/>
                </xpath>

            </field>
        </record>

        <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
            <field name="domain">['|', ('allowed_user_ids', '=', False), ('allowed_user_ids', '=', uid), ('move_type',
                '=', 'out_invoice')]
            </field>
        </record>

        <record id="account.action_account_payments" model="ir.actions.act_window">
            <field name="domain">['|', ('allowed_user_ids', '=', False), ('allowed_user_ids', '=', uid), ('partner_type', '=', 'customer'), ('is_internal_transfer', '=', False)]</field>
        </record>

        <record id="account.action_move_out_refund_type" model="ir.actions.act_window">
            <field name="domain">['|', ('allowed_user_ids', '=', False), ('allowed_user_ids', '=', uid), ('move_type',
                '=', 'out_refund')]
            </field>
        </record>

        <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
            <field name="domain">['|', ('allowed_user_ids', '=', False), ('allowed_user_ids', '=', uid)]</field>
        </record>

    </data>
</odoo>